shadow()
  box-shadow 0px 0px 5px #888888
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  -ms-border-radius arguments
  -o-border-radius arguments
  border-radius arguments
fontFamily=font-family Monaco, Menlo, 'Ubuntu Mono', Consolas, source-code-pro, monospace;
.global_overlay
  position absolute
  top 0px
  right 0px
  bottom 0px
  left 0px
  z-index 10000
  opacity 0.3
  background #000

#ac_dropdown
  position absolute
  background #fff
  min-width 100px
  z-index: 10000
  padding 0px
  margin 0px
  shadow()
  max-height 200px
  overflow-y auto

#ac_dropdown li
  line-height 20px
  padding 0 10px
  list-style none

#ac_dropdown li.sel, #ac_dropdown li:hover
  background #ccc

/*================================================*/

.mipt
  padding 0
.mipt input
  height 22px
  padding 0px
  border 0px
  width 12px
  max-width 200px
  vertical-align top
  margin-left 3px

.mipt .dropdown
  position absolute
  background #fff
  min-width 100px
  z-index: 10000
  padding 0px
  margin 0px
  shadow()
  max-height 200px
  overflow-y auto

.mipt .dropdown li
  line-height 20px
  padding 0 10px
  list-style none

.mipt .dropdown li.sel
  background #ccc

.mipt .W
  position absolute
  visibility hidden
.mipt span.item
  background #ccc
  padding 2px 5px
  margin-left 3px
  margin-bottom 3px
  border-radius(2px)
  vertical-align top
  display inline-block
.mipt span.item .del
  font-size 12px
  padding-left 5px
  cursor pointer
.mipt span.item .del:hover
  color: #f00

/*================================================*/

.dlg
  position absolute
  background #fff
  border-radius(5px)
  shadow()
  z-index 10001
.dlg_title
  line-height 40px
  padding 0 10px
  border-bottom 1px solid #ccc
  background #ccc
  border-radius 5px 5px 0 0
.dlg_close_btn
  float right
  color orangered
  text-decoration none
.dlg_close_btn:hover
  color #f00
.dlg_close_btn:active
  color orangered
.dlg_content
  padding 10px
.dlg_btn_set
  line-height 40px
  text-align center
  border-top 1px solid #ccc
.dlg_btn_set button
  padding 3px 20px
  font-family fontFamily
  font-size 16px
