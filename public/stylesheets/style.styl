.pager .page
  min-width 40px
  height 30px
  line-height 30px
  text-align center
  border 1px solid #ccc
  margin-right 5px
  background #eee
  text-decoration none
  inline_block()

.pager .page:hover
  border-color #69c

.pager .page.dis
  border-color transparent


