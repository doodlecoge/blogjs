border_style = 1px solid #bbb

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  -ms-border-radius arguments
  -o-border-radius arguments
  border-radius arguments

bg()
  background-color: #eeeeee;
  background-image: -moz-linear-gradient(#f0f0f0, #ddd);
  background-image: -webkit-linear-gradient(#f0f0f0, #ddd);
  background-image: linear-gradient(#f0f0f0, #ddd);
  background-repeat: repeat-x;

border_box()
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-box-sizing border-box

inline_block()
  display -moz-inline-stack
  display inline-block
  zoom 1
  *display inline

body
  margin 0px
  background #eee
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

#W
  font-size 16px
  position absolute

.tbl
  width 100%
  height 30px
  padding 5px 0
  border-spacing 0px
  border-bottom border_style


.tbl td
  padding 0px 5px
  margin 0px
  border 0px


.tbl input, .tbl #tags
  height 30px
  background #fff
  border border_style
  padding 0px 5px
  outline none
  width 100%
  border-radius 5px
  border_box()
  font-size 16px
  cursor text



.tbl #tags .ipt
  height 28px
  padding 0px
  border 0px
  width 12px





#work_area
  position: absolute
  top 76px
  bottom 0px
  left 0px
  right 0px


#work_area #editor
  position absolute
  top 0px
  right 50%
  bottom 0
  left 0px
  margin-right 3px
  border-right border_style
  background #fff

#work_area #viewer
  position absolute
  top 0px
  right 0px
  bottom 0px
  left 50%
  margin-left 3px
  border-left border_style
  background #fff

